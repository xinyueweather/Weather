                android:textSize="100sp" />

            <TextView
                android:id="@+id/nowCond"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/curMax_MinTem"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center" />
        </LinearLayout>
